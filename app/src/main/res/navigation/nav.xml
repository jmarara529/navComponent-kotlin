<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/home2">

    <fragment
        android:id="@+id/home2"
        android:name="es.jmarara529.navcomponent_kotlin.home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_home2_to_segundo"
            app:destination="@id/segundo"/>

        <argument
            android:name="text"
            app:argType="string"/>
        <argument
            android:name="number"
            app:argType="integer" />

    </fragment>
    <fragment
        android:id="@+id/segundo"
        android:name="es.jmarara529.navcomponent_kotlin.segundo"
        android:label="fragment_segundo"
        tools:layout="@layout/fragment_segundo" >


        <argument
            android:name="text"
            app:argType="string"/>
        <argument
            android:name="number"
            app:argType="integer" />
        <action
            android:id="@+id/action_segundo_to_tercero"
            app:destination="@id/tercero" />

    </fragment>
    <fragment
        android:id="@+id/tercero"
        android:name="es.jmarara529.navcomponent_kotlin.tercero"
        android:label="fragment_tercero"
        tools:layout="@layout/fragment_tercero" >
        <action
            android:id="@+id/action_tercero_to_home2"
            app:destination="@id/home2" />
    </fragment>
</navigation>